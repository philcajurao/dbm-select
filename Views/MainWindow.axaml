										  </UniformGrid>
										  <TextBlock Text="8 PCS 4R PRINT (Mixed Groups)" FontSize="12" Foreground="#cc8800" HorizontalAlignment="Center"/>
									  </StackPanel>

									  <!-- 4 pcs 5R (Mixed Sources) -->
									  <StackPanel Grid.Row="6" Spacing="5">
										  <UniformGrid Rows="1" Columns="4" Width="450" Height="150">
