					  <!-- Content: Replicating the complex layout -->
					  <Viewbox Grid.Row="1" Stretch="Uniform" Margin="0,20">
						  <Panel>

							  <!-- ✅ LAYOUT 3: Package D (Most Complex) -->
							  <!-- Specific layout for Package D based on your image -->
							  <!-- ✅ UPDATED: Increased Height to 850 to accommodate the taller wallet stack -->
							  <Grid ColumnDefinitions="Auto, 20, Auto" Height="850" IsVisible="{Binding IsPkgDSelected}">

								  <!-- Left Side: Big Frames -->
								  <StackPanel Grid.Column="0" Orientation="Horizontal" Spacing="20">

									  <!-- 9x12 Frame -->
