													  <Image Source="{Binding Image8x10.Bitmap}" Stretch="UniformToFill"/>
												  </Border>
												  <Border Background="#151515" BorderBrush="#333" BorderThickness="1" Width="80" Height="100" Margin="45,45,0,0" BoxShadow="2 2 5 0 #88000000">
													  <Image Source="{Binding Image8x10.Bitmap}" Stretch="UniformToFill"/>
