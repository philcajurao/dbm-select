												  </Border>
											  </Border>
										  </Border>
										  <TextBlock Text="9x12 PRINT with 11x14 FRAME" FontSize="14" Foreground="#cc8800" HorizontalAlignment="Center" FontWeight="Bold"/>
									  </StackPanel>

									  <!-- 8x10 Frame -->
									  <StackPanel VerticalAlignment="Center" Spacing="10">
										  <Border Background="#1a1a1a" BorderBrush="#333" BorderThickness="2" Padding="20" BoxShadow="0 0 20 5 black">
											  <Border Background="#101010" Padding="15">
												  <Border BorderBrush="#cc6600" BorderThickness="3" BoxShadow="inset 0 0 20 0 #ff8800">
