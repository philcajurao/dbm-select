									  <!-- 8 pcs 4R (Mixed Sources - Stacked Groups) -->
									  <!-- ✅ UPDATED: Arranged in 1 row x 4 columns, with OVERLAPPING stacks (2 photos each) -->
									  <StackPanel Grid.Row="4" Spacing="5">
										  <UniformGrid Rows="1" Columns="4" Width="400" Height="140">

											  <!-- Group 1: 2x Toga (8x10) -->
											  <Grid Margin="5" HorizontalAlignment="Center" VerticalAlignment="Center">
												  <Border Background="#151515" BorderBrush="#333" BorderThickness="1" Width="70" Height="90" Margin="0,0,20,20" BoxShadow="2 2 5 0 #88000000">
