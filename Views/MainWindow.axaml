				  <Grid RowDefinitions="Auto, *, Auto" Margin="20">
					  <!-- Header -->
					  <Grid Grid.Row="0" ColumnDefinitions="*, Auto">
						  <TextBlock Text="Package Preview" FontSize="24" FontWeight="Bold" Foreground="#f0f0f0"/>
